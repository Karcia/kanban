<div class="panel panel-default">
  <button><%= link_to "New Project", new_project_path %></button>
  <div class="panel-heading"><h2>Listing lists</h2></div>
    <div class="row">
      <% @lists.each do |list| %>
        <% if list.user == current_user %>
          <div class="list-container col-lg-4">
            <div class="panel panel-default">
              <div class="panel-heading list"><h4><%= list.title %></h4></div>
              <div class="descr"><%= list.description.truncate_words(10) %></div>
              <% list.cards.each do |card| %>
                <div class="panel panel-default card">
                  <div class="panel-heading card"><h5><%= card.title %></h4></div>
                  <div class="descr-card"><%= card.description %></div>
                </div>
              <% end %>
              <div class="panel-footer">
                <button><%= link_to 'Add card', new_card_path %></button>
                <%= link_to 'Show', list %>
                <%= link_to 'Edit', edit_list_path(list) %>
                <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>  
    </div>
  <div class="panel-footer"><button><%= link_to 'New List', new_list_path %></button></div>
</div>