<div class="panel panel-default">
  <div class="panel-heading"><h2>Listing lists</h2></div>
    <div class="panel-body">
      <div class="container">
        <% @lists.each do |list| %>
          <% if list.user == current_user %>
            <%= list.title %>
            <%= list.description %>
            <%= link_to 'Show', list %>
            <%= link_to 'Edit', edit_list_path(list) %>
            <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        <% end %>
      </div>
    </div>
  <div class="panel-footer"><%= link_to 'New List', new_list_path %></div>
</div>